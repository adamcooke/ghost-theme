{{!< default}}

<section class='welcome'>
  <p>
    <b>Greetings!</b> <a href='/me/'>I'm Adam</a> and I'm a UK-based <a href='/projects/'>software developer &amp; designer</a> as well as being managing director of <a href='http://atechmedia.com'>aTech Media</a>, <a href='http://viaduct.io'>Viaduct</a> &amp; <a href='http://dial9.co.uk' class='d9'>Dial 9</a>.
  </p>
</section>

<main class="content post-list" role="main">

    {{#foreach posts}}

    <article class="home {{post_class}}">
      <p class="meta"><time datetime="{{date format='YYYY-MM-DD'}}">{{date format="dddd Do MMMM YYYY"}}</time></p>
      <h2 class="post-title"><a href="{{url}}">{{{title}}}</a></h2>
      <section class="post-excerpt">
          <p>{{excerpt}}&hellip;</p>
      </section>
    </article>

    {{/foreach}}

    <div class='footer'>
      {{pagination}}
      <p class='viaduct-link'><a href='http://viaduct.io/refer/dc6a04'><img src='https://cdn.viaduct.io/hosted/small-grey.png' /></a></p>
    </div>

</main>
